# include<bits/stdc++.h>

int detectCycleInDirectedGraph(int n, vector < pair < int, int >> & edges) {
  vector<int> adj[n+1];
  for(int i=0;i<edges.size();i++)
  {
      int a = edges[i].first;
      int b = edges[i].second;
      adj[a].push_back(b);
  }
  vector<int> indegree(n, 0);
  for(int i=1;i<=n;i++)
  {
      for(auto i:adj)
  }

}
